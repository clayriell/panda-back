<style>
  body {
    background: #f4f4f4;
    font-family: Arial, sans-serif;
  }

  .center-wrapper {
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
  }

  .card {
    background: white;
    width: 100%;
    max-width: 480px;
    padding: 30px 35px;
    border-radius: 10px;
    box-shadow: 0 4px 14px rgba(0,0,0,0.1);
    border: 1px solid #ddd;
  }

  .card h2 {
    text-align: center;
    margin-bottom: 25px;
    font-size: 26px;
    color: cornflowerblue;
    font-weight: bold;
  }

  .row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 15px;
    padding-bottom: 8px;
    border-bottom: 1px solid #e5e5e5;
  }

  .label {
    font-weight: bold;
    color: #555;
    width: 140px; /* menyamakan lebar kiri */
  }

  .value {
    text-align: left;
    color: #222;
  }

  .value span {
    font-weight: normal;
  }
</style>

<head>
    <title>Verification page</title>
</head>
<div class="center-wrapper">
  <div class="card">
    <h2>Signature Valid</h2>

    <div class="row">
      <div class="label">Doc Number</div>
      <div class="value"> <%= docNumber %></div>
    </div>

    <div class="row">
      <div class="label">Ship Name</div>
      <div class="value"> <%= shipName %> </div>
    </div>

    <div class="row">
      <div class="label">Signed By</div>
      <div class="value"> <%= userName %> (<%= userRole %>)</div>
    </div>

    <div class="row">
      <div class="label">Signed At</div>
      <div class="value"> <%= signedAt %></div>
    </div>

  </div>
</div>

